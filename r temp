#Part 1

pollutantmean <- function(directory, pollutant, id = 1:332) {   
## 'directory' is a character vector of length 1 indicating
## the location of the CSV files

## 'pollutant' is a character vector of length 1 indicating
## the name of the pollutant for which we will calculate the
## mean; either "sulfate" or "nitrate".

## 'id' is an integer vector indicating the monitor ID numbers
## to be used

## Return the mean of the pollutant across all monitors list
## in the 'id' vector (ignoring NA values)
  allFiles <- list.files(path = directory, full.names = TRUE)
  selectedData <- data.frame()
  for (i in id) {
  selectedData <- rbind(selectedData, read.csv(allFiles[i]))
  }
  if (pollutant == 'sulfate') {
  mean(selectedData$sulfate, na.rm = TRUE)
  } else if (pollutant == 'nitrate') {
  mean(selectedData$nitrate, na.rm = TRUE)
  }
}
#Calculations
pollutantmean("specdata","sulfate",1:10)
pollutantmean("specdata", "nitrate", 70:72)
pollutantmean("specdata", "nitrate", 23)

# Part 2

complete <- function(directory, id = 1:332) {
## 'directory' is a character vector of length 1 indicating
## the location of the CSV files

## 'id' is an integer vector indicating the monitor ID numbers
## to be used

## Return a data frame of the form:
## id nobs
## 1  117
## 2  1041
## ...
## where 'id' is the monitor ID number and 'nobs' is the
## number of complete cases
  allFiles<- list.files(path=directory,full.names=TRUE)
  CC<-data.frame()
  nobs<-data.frame()
  for (i in id){
  selectedData <- read.csv((allFiles[i]), header=TRUE)
  nobs<-sum(complete.cases(selectedData))
  CC<-rbind(CC,data.frame(i,nobs))
  }
  CC
}
complete("specdata", 1)
complete("specdata", c(2, 4, 8, 10, 12))
complete("specdata", 30:25)
complete("specdata", 3)


best<-function(state,outcome) {
  
##Read outcome data
  
  hosp.data<-read.csv("outcome-of-care-measures.csv",)

##Converting 'character' class into 'numeric' class
  
  hosp.data[,11]<-as.numeric(hosp.data[,11])
  hosp.data[,17]<-as.numeric(hosp.data[,17])
  hosp.data[,23]<-as.numeric(hosp.data[,23])
  
##Check that state and outcome are valid
  
  if (!state %in% hosp.data$State){
    stop ("invalid state")} 
  if (!outcome %in% c("heart attack","heart failure","pneumonia")){
    stop ("invalid outcome")} 
  
##Return hospital name in that state with lowest 30-day death rate
  
  if (outcome=="heart attack"){
    state_sub<-hosp.data[hosp.data[,7]=="state",]
    outcome_new<-state_sub[,hosp.data[,11]]
    lowestmortalityHeartAttack<-min(outcome_new,na.rm = TRUE)
    min_index<-which(outcome_new==lowestmortalityHeartAttack)
    hospital_name<-state_sub[min_index,2]
  }
  if (outcome=="heart failure"){
    state_sub<-hosp.data[hosp.data[,7]=="state",]
    outcome_new<-state_sub[,hosp.data[,17]]
    lowestmortalityHeartFailure<-min(outcome_new,na.rm = TRUE)
    min_index<-which(outcome_new==lowestmortalityHeartFailure)
    hospital_name<-state_sub[min_index,2]
  }
  if (outcome=="pneumonia"){
    state_sub<-hosp.data[hosp.data[,7]=="state",]
    outcome_new<-state_sub[,hosp.data[,23]]
    lowestmortalityHeartPneumonia<-min(outcome_new,na.rm = TRUE)
    min_index<-which(outcome_new==lowestmortalityPneumonia)
    hospital_name<-state_sub[min_index,2]
  }
 hospital_name
}
